{
  "name": "chatter-bot",
  "version": "1.0.0",
  "description": "Discord Chatter App Integration",
  "license": "MIT",
  "author": "",
  "type": "module",
  "main": "app.js",
  "scripts": {
    "dev": "nodemon app.js",
    "start": "node app.js",
    "prebuild": "mkdir -p ../ansible/roles/chatter-bot/files/ && rm -rf ../ansible/roles/chatter-bot/files/*",
    "build": "docker build -t chatter-bot .",
    "format": "prettier --write .",
    "postbuild": "docker save chatter-bot:latest | gzip > ../ansible/roles/chatter-bot/files/chatter-bot.tar.gz"
  },
  "dependencies": {
    "discord-interactions": "^4.3.0",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "prettier": "~3.5.0",
    "prettier-plugin-jsdoc": "^1.3.2"
  }
}
